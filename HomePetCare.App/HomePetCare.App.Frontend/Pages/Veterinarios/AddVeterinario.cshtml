@page
@model HomePetCare.App.Frontend.Pages.AddVeterinarioModel
@{
}
<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
<h2>Agregar Veterinario</h2>


<form method="post">

     <input type="hidden" asp-for="Veterinario.Id" />

    <div class="formulario">
        <label asp-for="Veterinario.Id"></label>
        <input asp-for="Veterinario.Id" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Id"></span>
    </div>
    <div class="formulario">
        <label asp-for="Veterinario.Nombre"></label>
        <input asp-for="Veterinario.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Nombre"></span>
    </div>
    <div class="formulario">
        <label asp-for="Veterinario.Apellidos"></label>
        <input asp-for="Veterinario.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Apellidos"></span>
    </div>

    <div class="formulario">
        <label asp-for="Veterinario.NumeroTelefono"></label>
        <input asp-for="Veterinario.NumeroTelefono" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.NumeroTelefono"></span>
    </div>
    <div class="formulario">
        <label asp-for="Veterinario.Codigo"></label>
        <input asp-for="Veterinario.Codigo" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Codigo"></span>
    </div>
    <div class="formulario">
        <label asp-for="Veterinario.RegistroRethus"></label>
        <input asp-for="Veterinario.RegistroRethus" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.RegistroRethus"></span>
    </div>
    
    

    <div class="footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>

</form>
<a asp-page="./ListVet" class="btn-default">Volver a la lista de Veterinarios</a>